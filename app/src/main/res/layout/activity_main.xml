<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahil.ticedtacedtoed.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/r0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:onClick="myOnClickMethod"
            android:tag="0" />

        <ImageView
            android:id="@+id/r1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:onClick="myOnClickMethod"
            android:tag="1" />

        <ImageView
            android:id="@+id/r2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:onClick="myOnClickMethod"
            android:tag="2" />

        <ImageView
            android:id="@+id/r3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:onClick="myOnClickMethod"
            android:tag="3" />

        <ImageView
            android:id="@+id/r4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:onClick="myOnClickMethod"
            android:tag="4" />

        <ImageView
            android:id="@+id/r5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:onClick="myOnClickMethod"
            android:tag="5" />

        <ImageView
            android:id="@+id/r6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:onClick="myOnClickMethod"
            android:tag="6" />

        <ImageView
            android:id="@+id/r7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:onClick="myOnClickMethod"
            android:tag="7" />

        <ImageView
            android:id="@+id/r8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:onClick="myOnClickMethod"
            android:tag="8" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/playAgainLayout"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="232dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/overMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="New Game" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
